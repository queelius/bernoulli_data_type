    \IfNoValueTF{#3}
    {
        \IfNoValueTF{#2}
            {\fancyfuzzysetstyle{#1}}
            {\fancyfuzzysetstyle{#1}_{\fancyfuzzysetsubstyle{#2}}}
    }
    {\fancyfuzzysetstyle{#1}_{\fancyfuzzysetsubstyle{#2}}^{\fancyfuzzysetsupstyle{#3}}}
}

\NewDocumentCommand{\BlackboardFuzzySet}{moo}{%
