    {
        \IfNoValueTF{#2}
            {\blackboardfuzzysetstyle{#1}}
            {\blackboardfuzzysetstyle{#1}_{\blackboardfuzzysetsubstyle{#2}}}
    }
    {\blackboardfuzzysetstyle{#1}_{\blackboardfuzzysetsubstyle{#2}}^{\blackboardfuzzysetsupstyle{#3}}}
}

